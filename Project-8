import random

options = ("rock", "paper", "scissor")
player = None
computer = random.choice(options)
running = True
while running:

    while player not in options: #means player's choice not found in options
        player = input("Enter a choice (rock, paper, scissor): ")

    print(f"Player: {player}")
    print(f"Computer: {computer}")

    if player == computer:
        print("It's a tie!")
    elif player == "rock" and computer == "scissor":
        print("You Win!")
    elif player == "paper" and computer == "rock":
        print("You Win!")
    elif player == "scissor" and computer == "paper":
        print("You Win!")
    else:
        print("Computer Win")
    player = input("Do you want to play again? (y for yes or n for no): ")
    if player == "y":
        player = input("Enter a choice (rock, paper, scissor): ")
    elif player == "n":
        print("Thanks for playing!")
        break
    else:
        print("You aren't serious dudeüíÅ")
